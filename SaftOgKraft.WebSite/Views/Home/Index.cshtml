@model IEnumerable<SaftOgKraft.WebSite.ApiClient.DTO.ProductDto>

@{
    ViewData["Title"] = "Home Page";
}

<section id="section-hero">
    
    <div class="hero-image">
        <img src="~/lib/images/Saftogkraft.png" alt="This is a hero banner"/>
        <div class="text-center">
            <section id="section-products">
                <h2>Most popular products</h2>
                <br />
                
                @foreach (var product in Model)
                {
                    <figure>
                        <h3>@product.Name</h3>
                        <p>@product.Description</p>
                        <p>Price: $@product.Price</p>
                        <a class="btn btn-primary" href="@Url.Action("Add", "Cart", new { id = product.Id, quantity = 1 })">Add To Cart</a>
                    </figure>
                }
               

               
            </section>
        </div>
    </div>
</section>

